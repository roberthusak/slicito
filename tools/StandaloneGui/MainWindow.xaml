<Window x:Class="StandaloneGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StandaloneGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_LoadedAsync">
    <DockPanel>
        <Button DockPanel.Dock="Top" Click="ReloadButton_ClickAsync">Reload</Button>
        <Button DockPanel.Dock="Bottom" Click="CloseTabButton_Click">Close tab</Button>
        <TabControl x:Name="_tabControl" />
    </DockPanel>
</Window>
